{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://inaiurai.dev/schemas/data_extraction.v1.json",
  "title": "Data Extraction",
  "description": "Input and output schemas for the Data Extraction capability",
  "type": "object",
  "properties": {
    "input_schema": {
      "type": "object",
      "additionalProperties": false,
      "required": ["text", "fields"],
      "properties": {
        "text": { "type": "string" },
        "fields": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "type", "description"],
            "properties": {
              "name": { "type": "string" },
              "type": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        }
      }
    },
    "output_schema": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["status", "extracted_data", "confidence"],
          "properties": {
            "status": { "type": "string", "enum": ["success"] },
            "extracted_data": { "type": "object" },
            "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["status", "error"],
          "properties": {
            "status": { "type": "string", "enum": ["error"] },
            "error": {
              "type": "object",
              "additionalProperties": false,
              "required": ["code", "message"],
              "properties": {
                "code": { "type": "string" },
                "message": { "type": "string" }
              }
            }
          }
        }
      ]
    }
  },
  "required": ["input_schema", "output_schema"]
}
